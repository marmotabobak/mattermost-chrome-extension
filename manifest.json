{
  "manifest_version": 3,
  "name": "Mattermost Thread Tools",
  "version": "0.1.0",
  "description": "Панель для просмотра треда Mattermost: Thread / Raw JSON / JSON для AI, копирование и скачивание.",
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://chatzone.o3t.ru/*"
  ],
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatzone.o3t.ru/*"
      ],
      "js": [
        "utils.js",
        "api.js",
        "id-resolver.js",
        "formatters.js",
        "ui.js",
        "content.js",
        "bootstrap.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "panel.css"
      ],
      "matches": [
        "https://chatzone.o3t.ru/*"
      ]
    }
  ]
}